{
    "version": "2.1.1",
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "module": "commonjs",
        "jsx": "react",
        "lib": [ 
            "dom", 
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ],
        "rootDir": "./src",
        "outDir": "./dist",
        "importHelpers": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "stripInternal": true,
        "pretty": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types/"
        ],
        "types": ["react", "react-native"],
        "allowSyntheticDefaultImports": true

    },
    "exclude": [
        "tmp",
        "temp",
        "dist",
        "node_modules",
        "types"
    ]
}