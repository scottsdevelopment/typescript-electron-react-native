{
    "version": "2.1.1",
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "module": "commonjs",
        "jsx": "react",
        "lib": [
          "dom",
          "es2015",
          "es2016",
          "es2017"
        ],
        "outDir": "./dist",
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "stripInternal": true,
        "pretty": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "tmp",
        "temp",
        "dist",
        "node_modules"
    ]
}